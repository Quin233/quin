<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_head_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="位置"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_move_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_right1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="姓名"/>

            <TextView
                android:id="@+id/tv_title_right2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="年龄"/>

            <TextView
                android:id="@+id/tv_title_right3"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="评分"/>

            <TextView
                android:id="@+id/tv_title_right4"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="进攻"/>

            <TextView
                android:id="@+id/tv_title_right5"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="防守"/>
            <TextView
                android:id="@+id/tv_title_right6"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="低位A"/>
            <TextView
                android:id="@+id/tv_title_right7"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="中距离A"/>
            <TextView
                android:id="@+id/tv_title_right8"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="远距离A"/>

            <TextView
                android:id="@+id/tv_title_right9"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="低位D"/>
            <TextView
                android:id="@+id/tv_title_right10"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="中距离D"/>
            <TextView
                android:id="@+id/tv_title_right11"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="远距离D"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGray"/>


</RelativeLayout>